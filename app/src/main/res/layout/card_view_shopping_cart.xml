<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopping_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/shopping_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="3"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/shopping_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TÃ­tulo del Producto"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Eliminar"
                android:textColor="#DA1C1C"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="50dp"
                app:icon="@drawable/baseline_delete"
                app:iconTint="#DA1C1C"
                app:strokeColor="#DA1C1C"
                app:strokeWidth="2dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>