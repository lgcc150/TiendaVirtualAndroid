<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TiendaVirtualAndroid"
        tools:targetApi="31">
        <activity
            android:name=".PurchaseCompleateActivity"
            android:exported="false"
            android:label="Compra realizada"/>
        <activity
            android:name=".ConfirmUserInfoActivity"
            android:exported="false"
            android:label="Informacion de usuario"/>
        <activity
            android:name=".LocationActivity"
            android:exported="false"
            android:label="GPS"/>
        <activity
            android:name=".ShoppingCartActivity"
            android:exported="false"
            android:label="Productos a comprar"/>
        <activity
            android:name=".ProductListActivity"
            android:exported="false"
            android:label="Lista de Productos"/>
        <activity
            android:name=".RegistrarActivity"
            android:exported="false"
            android:label="Nuevo Registro"/>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Inicio de sesion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>